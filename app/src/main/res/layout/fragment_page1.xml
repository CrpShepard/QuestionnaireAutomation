<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:padding="16dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewSNP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ФИО" />
    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Фамилия" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя" />

    <EditText
        android:id="@+id/editTextPatronymic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Отчество" />

    <TextView
        android:id="@+id/textViewSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Пол" />

    <RadioGroup
        android:id="@+id/radioGroupSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="М" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ж" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewBirthDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Дата рождения" />

    <EditText
        android:id="@+id/editTextBirthDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Дата рождения" />

    <TextView
        android:id="@+id/textViewBirthPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Место рождения" />

    <EditText
        android:id="@+id/editTextBirthPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Место рождения"
        android:layout_below="@id/editTextBirthDay" />

    <TextView
        android:id="@+id/textViewNationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Гражданство" />

    <EditText
        android:id="@+id/editTextNationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Гражданство" />

    <TextView
        android:id="@+id/textViewPassport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Паспорт" />
    <EditText
        android:id="@+id/editTextPassportSerial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Серия" />

    <EditText
        android:id="@+id/editTextPassportNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="№" />

    <EditText
        android:id="@+id/editTextPassportGivenBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Выдан" />

    <EditText
        android:id="@+id/editTextPassportGivenDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Дата выдачи" />

    <TextView
        android:id="@+id/textViewSNILS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Страховое свидетельство государственного пенсионного страхования " />

    <EditText
        android:id="@+id/editTextSNILS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="СНИЛС №" />

    <TextView
        android:id="@+id/textViewINN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Идентификационный номер налогоплательщика  " />

    <EditText
        android:id="@+id/editTextINN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ИНН №" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Номер телефона" />

    <EditText
        android:id="@+id/editTextPhoneMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Мобильный" />

    <EditText
        android:id="@+id/editTextPhoneHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Домашний" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Адрес места жительства" />
    <TextView
        android:id="@+id/textViewAddressPassport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="По паспорту" />
    <EditText
        android:id="@+id/editTextAddressPassportIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Почтовый индекс" />

    <EditText
        android:id="@+id/editTextAddressPassport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адрес" />

    <TextView
        android:id="@+id/textViewAddressFactual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Фактический" />
    <EditText
        android:id="@+id/editTextAddressFactualIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Почтовый индекс" />

    <EditText
        android:id="@+id/editTextAddressFactual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адрес" />

</LinearLayout>
</ScrollView>